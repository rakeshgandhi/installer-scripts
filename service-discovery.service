[Unit]
Description=Service Discovery
After=network.target

[Service]
WorkingDirectory=/opt/local/share/DoctorPayout-ServiceDiscoveryService
ExecStart=/usr/bin/dotnet /opt/local/share/DoctorPayout-ServiceDiscoveryService/ServiceDiscoveryService.API.dll
Restart=always
RestartSec=5
User=www-data
Environment=DOTNET_ENVIRONMENT=uat
Environment=ASPNETCORE_URLS=http://127.0.0.1:7270

[Install]
WantedBy=multi-user.target
